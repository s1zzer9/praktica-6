#include <iostream>
using namespace std;

int main() {
	int num, chet = 0, sum = 0, count = 0;
	setlocale(0, "");

	double midSum;

	do 
	{
		cout << "Введите число (0 для выхода): ";
		cin >> num;

		if (num != 0)
		{
			sum += num;
			count++;
			chet++;
		}
	}

	while (num != 0);
			
		midSum = sum /chet ;




	cout << "Сумма введенных чисел: " << sum << endl;
	cout << "Среднее занчение: " << midSum << endl;

	return 0;
}
